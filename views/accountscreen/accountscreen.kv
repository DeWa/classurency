#:kivy 2.1.0

<KeycodeInput>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.15
            text: "Give PIN"
            font_size: 30
        Label:
            id: keycode_label
            size_hint_y: 0.15
            text: root.formatted_keycode
            font_size: 48
        
        GridLayout:
            size_hint_y: 0.7
            cols: 5
            padding: 20
            Button:
                text: "1"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("1")
            Button:
                text: "2"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("2")
            Button:
                text: "3"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("3")
            BoxLayout:
                size_hint_x: None
                width: 20
            Button:
                text: "Cancel"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_pressing_cancel()
                background_color: .99, .11, .18, 1
            Button:
                text: "4"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("4")
            Button:
                text: "5"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("5")
            Button:
                text: "6"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("6")
            BoxLayout:
                size_hint_x: None
                width: 20
            Button:
                text: "Correction"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_correction()
                background_color: .98, .86, .05, 1
            Button:
                text: "7"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("7")
            Button:
                text: "8"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("8")
            Button:
                text: "9"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("9")
            BoxLayout:
                size_hint_x: None
                width: 20
            Button:
                text: "Enter"
                size_hint_y: 0.2
                padding_left: 10
                background_color: 0, .6, .0, 1
                on_release: app.root.get_screen('account_screen').on_pressing_enter()
            Button:
                text: ""
                size_hint_y: 0.2
                disabled: True
            Button:
                text: "0"
                size_hint_y: 0.2
                on_release: app.root.get_screen('account_screen').on_key_press("0")
            Button:
                text: ""
                size_hint_y: 0.2
                disabled: True
            BoxLayout:
                size_hint_x: None
                width: 20


<AccountInfo>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.15
            text: "Welcome _name_"
            font_size: 30
        GridLayout:
            size_hint_y: 0.7
            cols: 2
            padding: 20
            
            Label:
                text: "Balance"
                font_size: 30
            Label:
                text: "1000"
                font_size: 30
            Label:
                text: "Last five transactions:"
                size_hint_y: 1
            
                
        Button:
            text: "Back"
            size_hint_y: 0.15
            on_release: app.root.get_screen('account_screen').on_pressing_cancel()

